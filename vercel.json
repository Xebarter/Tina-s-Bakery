{
  "version": 3,
  "buildCommand": "node vercel-build.mjs",
  "outputDirectory": ".vercel/output",
  "regions": ["iad1"],
  "routes": [
    { "handle": "filesystem" },
    { "src": "/api/(.*)", "dest": "/api" },
    { "src": "/pesapal/(.*)", "dest": "/api/pesapal/$1" },
    { 
      "src": "/(.*)", 
      "dest": "/index.html",
      "headers": {
        "Cache-Control": "s-maxage=0, stale-while-revalidate=60"
      }
    }
  ]
}